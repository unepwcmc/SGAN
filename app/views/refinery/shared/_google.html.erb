<script>
    
    // RESOURCE DOWNLOAD
    if ( $("body.documents").length || $("body.categories").length ) {
        $(".item-content a").on("click", function() {
            var itemname = $(this).parents("li").find("h2").text();

            var downloadurl = $(this).attr("href");
            downloadurl = downloadurl.substr(downloadurl.lastIndexOf('/') + 1);

            ga("send", "event", "resource-download-click", itemname, downloadurl);
        });
    }

