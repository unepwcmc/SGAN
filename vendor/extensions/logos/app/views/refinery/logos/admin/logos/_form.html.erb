<%= form_for [refinery, :logos_admin, @logo] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @logo,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :url, "Enter full url: http://www." -%>
    <%= f.text_field :url -%>
  </div>

  <div class='field'>
    <%= f.label :client_logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :client_logo_id,
               :image => @logo.client_logo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.logos.admin.logos.logo'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @logo.title) -%>
<% end -%>
